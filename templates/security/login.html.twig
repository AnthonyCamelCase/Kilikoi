{% extends 'base.html.twig' %}

{% block title %}Se connecter {% endblock %}

{% block body %}

<div class="text-center container border border-danger shadow p-5 m-20 bg-white rounded">

    <form method="post" class="d-flex flex-column align-items-center mb-3 ">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <img class=" text-center mb-4" src="{{ asset('image/logo_kilikoi.jpg')}}" alt="" width="144" height="144">
            <label class="mb-4" for="inputEmail font-danger">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="mb-4" placeholder="exemple@hotmail.fr" required autofocus>
            <label class="mb-4" for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class=" mb-4" placeholder="au moins 6 caractères (chiffres, lettres majuscules minuscules, caratères spéciaux)" required> 
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <button class="btn btn-lg btn-danger" type="submit">
                Connexion
            </button>
        </form>
</div>

{% endblock %}